<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/header' %>
<%= render 'layouts/nav' %>

<sidebar id="sign_in" class="right">
  <% if member_signed_in? %>
      Signed in as <%= current_member.email %>
      <%= link_to "Sign out", destroy_member_session_path, method: :delete %>
  <% else %>
      <%= link_to "Sign in", new_member_session_path %>
      <%= link_to "Register", new_member_registration_path %>
  <% end %>
</sidebar>

<%= yield %>
<%= render 'layouts/footer' %>

</body>
</html>
